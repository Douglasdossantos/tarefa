@model IEnumerable<Tarefas.Models.UsuariosTarefasModel>
    @ViewBag.Title = "Buscar Usuarios"

<h2>Buscar Usuarios</h2>
<div class="form-inline">
    <input type="text" id="texto-pesquisa" class="form-control" />
    <button type="button" id="chk-pequisar" class="btn btn-default" onclick="pesquisar()">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </button>
</div>
<br />
<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>

</table>