            {
                <span>
                    Você já esta usando o serviço de Tarefas.
                    <br />
                    Sendo Assim, você pode ...
                </span>
                <br />
                <a href="@Url.Action("Index","Times")">Gerenciar Seus Times</a>
                <br />
                <span>ou</span>
                <br />
                <a href="@Url.Action("Index","Tarefas")">ir Para as Suas tarefas</a>
            }
            else
            {
                <span>Você ainda não está uando  o serviço de tarefas</span>
                <br />
                <a href="@Url.Action("Entrar","Times")">Começar a usaras tarefas agora!</a>
            }
        }
        else
        {
            <a href="@Url.Action("Resister","TimeSpan")">Registre-se e conheças os serviços disponiveis!</a>
            <br />
            <span>ou</span>
            <br />
            <a href="@Url.Action("Login","Account")">Entre com o seu Login e começe a usar agora </a>
        }
    </p>
</div>

